{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "FM Skin Builder",
  "identifier": "io.fm.skinbuilder",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "../scripts/build_backend.sh && npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FM Skin Builder",
        "width": 1200,
        "height": 780,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "resources": [
      "resources/backend"
    ]
  }
}
